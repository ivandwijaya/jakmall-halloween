theme__text = #4d485f
theme__main = #fb8800

html
    color theme__main
    font-size 14px
    line-height 1.5
    letter-spacing 0
    box-sizing border-box

body
    margin 0
    font-family Arial, Helvetica, sans-serif
    overflow-x hidden

a
    text-decoration: none
    color: inherit

a:hover
    color theme__main

h1
    color theme__main
    font-size 3em
    font-weight 700

h2
    font-size 1.5em;

h3
    font-weight 600;

h1,h2,h3,h4,h5,h6
    margin 0
    

/* main CSS goes here */
.banner__wrapper
    background-color theme__main
    width 100%

.banner__main
    padding 15px 0

.banner__logo
    max-width 350px
    margin 0 auto
    position relative
    z-index 990
    padding 0 20px


.banner__image
    width 100%

bannerStyle()
    position absolute
    width 200px
    height 234px
    top 0 

transition()
    -webkit-transition all .5s ease-in-out
    transition all .5s ease-in-out

.banner__left
    bannerStyle()
    transition()
    background-image url(../img/banner__left.png)
    top 0
    z-index 970

.banner__right
    bannerStyle()
    transition()
    background-image url(../img/banner__right.png)
    right 0
    z-index 970

.banner__cat
    bannerStyle()
    transition()
    background-image url(../img/banner__cat.png)
    left 20px
    z-index 980

.banner__ghost
    bannerStyle()
    transition()
    background-image url(../img/banner__ghost.png)
    right 20px
    z-index 980

.top__wrapper
    width 100%
    padding 2.5% 25px 0 25px
    margin 0 auto
    display table
    transition()

.top__share
    position absolute
    right 0
    top 2em

.top__columnlogo
    position relative
    width 40%
    float left

.top__logo
    max-width 205px
    margin 0 auto

.top__image
    width: 100%

.top__columntext
    position relative
    width 60%
    float left

.top__textwrapper
    margin 10px 0

.main__wrapper
    width 100%
    padding-top 2.5%
    margin 0 auto
    display table
    margin-bottom 30px
    transition()

.main__nav
    list-style none
    display table
    margin-bottom 0
    padding-left 10%

.main__navmenu
    display block
    position relative
    float left
    
.navmenu__elem
    position relative
    display block
    padding 10px 15px
    font-size 1.5em
    font-weight 600

.active
    border-bottom 2px solid theme__main

.navmenu__elem:hover
    border-bottom 2px solid theme__main

.main__content
    width 100%
    background-color #f3f3f3

.content__wrapper
    padding 3%

.content__flex 
  padding 0
  margin 0
  list-style none
  
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  
  -webkit-flex-flow: row wrap
  justify-content: space-around

.content__item
  padding 5px
  width calc(100% * (1/4) - 10px - 1px)
  margin-top 10px
  font-size 1em
  text-align center
  margin 0 auto
  margin-bottom 20px

.item__wrapper
    max-width 210px
    height 100%
    margin 0 auto
    background #fff
    position relative
    border 2px solid #ddd

.item__wrapper:hover
    border 2px solid theme__main

.item__best
    position absolute
    top 0
    left 0
    padding 8px 10px
    background theme__main
    color #fff
    box-shadow 5px 2px 7px rgba(0,0,0,.1)

.item__slider
    padding 5px

.item__image img
    width: 100%

.item__description
    text-align left
    padding 0 3px
    overflow hidden

.item__price
    color theme__main

item__button()
    margin 10px 0
    border none
    color white
    padding 10px 27px
    text-align center
    text-decoration none
    display inline-block
    font-size 16px

.item__button--avail
    item__button()
    background-color theme__main

.item__button--avail:hover
    color theme__text
    background-color #fff
    box-shadow 0px 0px 0px 1px theme__main inset

.item__button--soldout
    item__button()
    background-color #ddd

@media(min-width: 860px)
    .top__wrapper
        width 80.4%
        padding 0
        padding-top 2.5%
    
    .main__wrapper
        width 80%

@media (min-width: 992px)
    .banner__cat
        top 0
        left 200px
    
    .banner__ghost
        top 0
        right 200px

    .top__wrapper
        width 65.4%
        padding-top 2.5%

@media (max-width: 600px)
    .banner__cat
        display none
    
    .banner__ghost
        display none
    
    .top__columnlogo
        width 60%
        float none
    
    .top__columntext
        float none
        width 90%
    
    .top__share
        display block
        position relative
        float none
        top 0
    
    h1
        font-size 2.3em
    
    h2
        font-size 1.3em
    
    .navmenu__elem
        font-size 1.2em
    
    .main__nav
        padding-left 0
        margin 0 auto
    
    .content__item
        width: calc(100% * (1/2) - 10px - 1px)